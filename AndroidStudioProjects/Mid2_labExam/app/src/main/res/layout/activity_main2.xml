<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="overview"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="62dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="136dp"
        android:layout_height="69dp"
        android:text="UPLOAD PRODUCT IMAGE"
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="44dp" />
</LinearLayout>

        <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="193dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        >

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="minusquantity"
            android:text="-"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="266dp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="0"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addquantity"
            android:text="+"
            tools:layout_editor_absoluteX="321dp"
            tools:layout_editor_absoluteY="266dp" />
    </LinearLayout>



    <EditText
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Price"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="388dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="460dp" />

    <EditText
        android:id="@+id/sup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name of Supplier"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="453dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier email"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="519dp" />

    <EditText
        android:id="@+id/sup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="email"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="500dp" />

    </LinearLayout>

    <Button
        android:id="@+id/savebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>